---
import data from './data/experience.js'
---

<div class="contactInfo experience">
  <h3 class="title">Практический опыт</h3>
  <ul>
    {data.map((item, idx) => (
      <li key={idx}>
        <span class="text">{item.text}</span>
        <span class="percent">
          <div style={{ width: item.percent }}></div>
        </span>
      </li>
    ))}
  </ul>
</div>

<style>
  .experience {
    padding-bottom: 2.5rem;
  }

  li + li {
    padding-top: 1rem;
  }

  .percent {
    position: relative;
    width: 100%;
    height: 6px;
    background: #081921;
    display: block;
    margin-top: 5px;
  }

  .percent div {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    background: #62c8f7;
  }
</style>
