---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import newVideo from "@images/home/bg_main.webp";

const YTVideo = "https://youtu.be/A0hW1u1f0wA";
---

<section class="flex flex-col items-center gap-6 py-6">
  <div
    class="w-full max-w-[600px] border border-[--mainBorderColor] rounded-lg p-1 transition-all duration-300 hover:border-[--mainLinkColor-light] hover:shadow-lg hover:shadow-[--mainLinkColor-light]/30"
  >
    <a href={YTVideo} target="_blank" class="group/video-link block">
      <Image
        src={newVideo}
        width={600}
        height={300}
        decoding="async"
        loading="eager"
        fetchpriority="high"
        format="webp"
        class="w-full h-auto rounded-lg transition-transform duration-300 group-hover/video-link:scale-[1.02]"
        alt="Автоюрист Сургут"
      />
    </a>
  </div>

  <div class="text-white w-full text-center">
    <a
      href={YTVideo}
      target="_blank"
      class="group/yt-button inline-flex items-center justify-center gap-2 px-4 py-2 border border-[--mainBorderColor] rounded-lg text-[--secondaryTextColor] hover:border-[--mainLinkColor-light] hover:shadow-lg transition-all duration-300"
    >
      <Icon
        name="social-youtube"
        size={25}
        class="text-[--secondaryTextColor] group-hover/yt-button:text-[--mainLinkColor-light] transition-colors duration-300"
      />
      <span
        class="group-hover/yt-button:text-[--mainLinkColor-light] transition-colors duration-300"
      >
        Смотреть на YouTube
      </span>
    </a>
  </div>
</section>
