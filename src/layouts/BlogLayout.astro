---
import '../styles/blog/blog.css';
import BaseHead from '@components/home/BaseHead.astro';
import Header from '@components/blog/Header.astro';
import Footer from '@components/blog/Footer.astro';

interface Props {
  title: string;
  description: string;
  canonical: string;
}

const { title, description, canonical } = Astro.props;
---

<!doctype html>
<html lang="ru">
  <head>
    <BaseHead title={title} description={description} canonical={canonical} />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
