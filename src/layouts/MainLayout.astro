---
import '@styles/home/main.css';
import BaseHead from '@components/home/BaseHead.astro';
import Header from '@components/home/Header.astro';
import Footer from '@components/home/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
}

const { title, description, canonical } = Astro.props;
---

<!doctype html>
<html lang="ru">
  <head>
    <BaseHead title={title} description={description} canonical={canonical} />
    <meta
      name="google-site-verification"
      content="AXZMh5crVx8zlMhcYUeLQOxVNVxlNEU0aTVMBZnWVfI"
    />
  </head>
  <body>
    <Header />
    <section class="container">
      <slot />
    </section>
    <Footer />
  </body>
</html>
