---
interface Props {
  items: Array<{
    text: string;
    subtext: string;
  }>;
}

const { items } = Astro.props;
---

<div class="checklist">
  {items.map((item) => (
    <div class="checklist-item">
      <span class="checkmark">âœ… <strong class="item-text">{item.text}</strong></span>
      
      <small>
        (* <small>{item.subtext}</small>)
      </small>
    </div>
  ))}
</div>

<style>
  .checklist {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .checklist-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .checkmark {
    font-size: 1.2rem;
    margin-right: 0.5rem;
  }

  .item-text {
    font-size: 1rem;
    font-weight: bold; 
  }

  small {
    color: white;
    font-size: 0.9rem;
    font-style: italic;
  }
</style>