---
import { getCollection, type CollectionEntry } from "astro:content";

const blogPosts = await getCollection("blog");
const currentSlug = Astro.url.pathname.split("/").filter(Boolean).pop();
const otherPosts = blogPosts.filter((post) => post.slug !== currentSlug);
const sortedPosts = otherPosts.sort(
  (a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime()
);
const latestPosts = sortedPosts.slice(0, 3);
---

<div class="related-articles">
  <p class="articles">Другие статьи:</p>
  <div class="articles-list">
    {
      latestPosts.map((post) => (
        <a href={`/blog/${post.slug}/`} class="article-link">
          <span class="link-content">
            <span class="link-text">{post.data.title}</span>
            <span class="link-icon">→</span>
          </span>
        </a>
      ))
    }
  </div>
</div>

<style>
  .related-articles {
    margin-top: 2rem;
    border-radius: 0.5rem;
    padding: 1.25rem;
    background: rgba(15, 23, 42, 0.1);
  }

  .articles {
    font-weight: 500;
    font-size: 1.1rem;
    margin-bottom: 1rem;
    color: #f3f4f6;
  }

  .articles-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .article-link {
    display: inline-flex;
    color: #e5e7eb;
    text-decoration: none;
    font-size: 0.95rem;
    padding: 0.5rem 0.75rem;
    border-radius: 0.25rem;
    transition: all 0.2s ease;
  }

  .link-content {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    position: relative;
    padding: 0.2rem 0;
  }

  .link-text {
    transition: transform 0.2s ease;
  }

  .link-icon {
    opacity: 0;
    transition:
      opacity 0.3s ease,
      transform 0.3s ease;
    color: #93c5fd;
  }

  /* ==== Desktop hover effects ==== */
  @media (min-width: 768px) {
    .article-link:hover {
      background-color: rgba(30, 41, 59, 0.4);
    }

    .link-content::after {
      content: "";
      position: absolute;
      left: 0;
      bottom: 0;
      width: 0;
      height: 1px;
      background: linear-gradient(90deg, transparent, #93c5fd, transparent);
      transition: width 0.3s ease;
    }

    .article-link:hover .link-content::after {
      width: 100%;
    }

    .article-link:hover .link-text {
      transform: translateX(4px);
    }

    .article-link:hover .link-icon {
      opacity: 1;
      transform: translateX(2px);
    }
  }

  /* ==== Mobile styles ==== */
  @media (max-width: 767px) {
    .related-articles {
      padding: 1rem;
      background: rgba(15, 23, 42, 0.05);
    }

    .articles {
      font-size: 1rem;
      margin-bottom: 0.75rem;
    }

    .articles-list {
      gap: 0.35rem;
    }

    .article-link {
      padding: 0.4rem 0.5rem;
      font-size: 0.85rem;
    }

    .link-icon {
      display: none;
    }
  }
</style>
