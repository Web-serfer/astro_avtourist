---
import MainLayout from "@layouts/MainLayout.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import NewVideo from "@images/home/bg_main.webp";
const YTVideo = "https://youtu.be/A0hW1u1f0wA";
---

<MainLayout title="Страница 404 | Автоюрист Сургут">
  <main class="flex flex-col items-center px-4 py-8 space-y-8">
    <section class="w-full max-w-2xl text-center">
      <h1 class="text-white text-3xl md:text-4xl font-bold mb-4">
        404. Страница ошибки
      </h1>
      <p class="text-gray-300 text-lg">Запрашиваемая страница не найдена</p>
    </section>

    <!-- Секция видео -->
    <section class="w-full max-w-2xl flex flex-col items-center gap-6">
      <div class="border border-gray-600 rounded-lg p-1 w-full max-w-xs">
        <a href={YTVideo} target="_blank" class="block">
          <Image
            src={NewVideo}
            width={320}
            height={248}
            loading="eager"
            decoding="async"
            class="w-full h-auto rounded-lg"
            alt="Автоюрист Сургут"
          />
        </a>
      </div>

      <div class="flex flex-col items-center text-center space-y-4">
        <h3 class="text-white text-xl font-medium">Автоюрист Сургут</h3>
        <a
          href={YTVideo}
          target="_blank"
          class="flex items-center gap-2 px-6 py-2 border border-gray-600 text-white rounded-lg hover:border-blue-400 transition-colors"
        >
          <Icon name="social-youtube" size={25} />
          Смотреть на YouTube
        </a>
      </div>
    </section>
  </main>
</MainLayout>
