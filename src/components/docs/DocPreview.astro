---
import { Icon } from "astro-icon/components";
const { title, href, alt } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  aria-label={`Скачать документ: ${title}`}
  class="card--article-preview flex items-center justify-between group py-3 px-4 hover:bg-white/5 rounded transition-colors text-[#adb0b1] hover:text-white"
>
  <!-- Левый блок (текст + иконка документа) -->
  <div class="flex items-center">
    <div class="w-6 h-6 flex-shrink-0 mr-3">
      <Icon
        name="docs"
        size="100%"
        class="opacity-80 group-hover:opacity-100 transition-opacity"
      />
    </div>
    <p class="italic">
      {title}
    </p>
  </div>

  <!-- Правая иконка скачивания -->
  <div
    class="w-5 h-5 flex-shrink-0 opacity-80 group-hover:opacity-100 transition-opacity"
  >
    <Icon name="download" size="100%" aria-hidden="true" />
    <span class="sr-only">Скачать</span>
  </div>
</a>
