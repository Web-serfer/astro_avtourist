---
import { Icon } from "astro-icon/components";
const { title, href, alt } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  aria-label={`Скачать документ: ${title}`}
  class="card--article-preview flex items-center justify-between group py-3 px-4 hover:bg-white/5 rounded transition-colors text-[#adb0b1] hover:text-white"
>
  <!-- Левый блок (текст + иконка документа) -->
  <div class="flex items-center">
    <Icon
      name="docs"
      size={22}
      class="mr-3 opacity-80 group-hover:opacity-100 transition-opacity"
    />
    <p class="docs-title italic">
      {title}
    </p>
  </div>

  <!-- Правая иконка скачивания -->
  <div class="opacity-80 group-hover:opacity-100 transition-opacity">
    <Icon name="download" size={20} aria-hidden="true" />
    <span class="sr-only">Скачать</span>
  </div>
</a>
